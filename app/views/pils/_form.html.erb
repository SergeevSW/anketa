  </div>

  <div class="form-group row " >
    <%= form.label :passportIssuedDate ,class: "col-sm-2 col-form-label"%>
    <div class = "col-sm-10">
      <%= form.date_field :passportIssuedDate %>
    </div>
  </div>

  <div class="form-group row " >
    <%= form.label :passportIssuedCode ,class: "col-sm-2 col-form-label"%>
    <div class = "col-sm-10">
      <%= form.text_field :passportIssuedCode %>
    </div>
  </div>

  <div class="form-group row" >
    <%= form.label :passportIssuedBy, class: "col-sm-2 col-form-label"%>
    <div class = "col-sm-10">
      <%= form.text_field :passportIssuedBy %>
    </div>
  </div>

  <div class="form-group row " >
    <%= form.label :birthDate ,class: "col-sm-2 col-form-label"%>
    <div class = "col-sm-10">
      <%= form.date_field :birthDate %>
    </div>
  </div>

  <div class="form-group row " >
    <%= form.label :passportBirthPlace ,class: "col-sm-2 col-form-label"%>
    <div class = "col-sm-10">
      <%= form.text_field :passportBirthPlace %>
    </div>
  </div>

  <div class="form-group row " >
    <%= form.label :passportRegion ,class: "col-sm-2 col-form-label"%>
    <div class = "col-sm-10">
      <%= form.text_field :passportRegion %>
    </div>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
